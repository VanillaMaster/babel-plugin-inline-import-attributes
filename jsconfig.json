{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "moduleDetection": "force",

        "resolveJsonModule": true,
        "allowArbitraryExtensions": true,
        
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "exactOptionalPropertyTypes": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}